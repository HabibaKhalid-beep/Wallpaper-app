<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/linen"> <!-- Background set to linen color -->

    <TextView
        android:id="@+id/textViewWallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wallpaper"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        android:gravity="center"
        android:padding="8dp"
        android:background="@android:color/transparent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewWallpaper"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:background="@android:color/transparent"
        android:indeterminateTint="@android:color/darker_gray" /> <!-- Set tint to grey -->

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar"
        android:layout_marginTop="47dp"
        android:layout_centerHorizontal="true"
        android:text="Start"
        android:background="@drawable/button_background"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:visibility="gone" /> <!-- Use the color resource -->

</RelativeLayout>
